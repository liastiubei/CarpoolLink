<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpic1"
    tools:context=".mainmenu.MyRidesFragment">


    <TextView
        android:id="@+id/myRidesPageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Rides"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonReservedRides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="21dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:text="My Reserved Rides"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintBottom_toTopOf="@+id/buttonPublishedRides"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPublishedRides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="311dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:text="My Published Rides"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>